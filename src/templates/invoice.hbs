<mjml>
    <mj-head>
        <mj-font name="Kantumruy" href="https://fonts.googleapis.com/css2?family=Kantumruy&family=Source+Sans+Pro&display=swap" />
    </mj-head>
    <mj-body background-color="#F4F4F4">
        <mj-section background-color="#000000" background-repeat="no-repeat" text-align="center" vertical-align="top" padding="0 0 0 0">
            <mj-column>
                <mj-image align="center" border="none" padding-bottom="0px" padding-left="0px" padding-right="0px" padding="0px 25px" src="https://i.imgur.com/hiBz7Kb.png" target="_blank" title="" width="780px"></mj-image>
            </mj-column>
        </mj-section>
        <mj-section background-color="#FFFFFF" background-repeat="repeat" padding-bottom="0px" padding-top="0">
            <mj-column width="100%">
                <mj-text align="center" font-size="28px" color="black" font-family="Kantumruy, Source Sans Pro, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="28px">{{thanks_for_purchase}},
                    <p style="font-size:16px; color:black"><i>{{fullName}}</i></p>
                </mj-text>
            </mj-column>
        </mj-section>
        <mj-section background-color="#FFFFFF" background-repeat="repeat" padding-bottom="5px" padding-top="0">
            <mj-column width="100%">
                <mj-divider border-color="#2c3e50" border-width="2px" border-style="solid" padding-left="20px" padding-right="20px" padding-bottom="0px" padding-top="0"></mj-divider>
                <mj-text align="center" font-family="Kantumruy, Source Sans Pro, sans-serif" line-height="28px" color="black" font-size="13px" padding-left="25px" padding-right="25px" padding-bottom="28px" padding-top="28px">

                    <span style="font-size:28px">{{course_title}}</span>

                </mj-text>
            </mj-column>
        </mj-section>
        <mj-section background-color="#FFFFFF" background-repeat="repeat" padding-bottom="15px">
            <mj-column>
                <mj-table font-size="36px">
                    <tr align="center">
                        <th>{{total}}</th>
                        <th>${{price}}</th>
                    </tr>
                </mj-table>
                <mj-button background-color="#e74c3c" color="#FFFFFF" padding="60px 0 30px 0" href="{{link}}" font-weight="bold" font-size="16px">{{start_learning}}</mj-button>
                <mj-divider border-color="#2c3e50" border-width="2px" border-style="solid" padding-left="20px" padding-right="20px" padding-bottom="0px" padding-top="0"></mj-divider>
                <mj-text color="black" font-family="Kantumruy, Source Sans Pro, sans-serif" font-size="14px" align="center" line-height="12px" align="align">
                    {{payment_method}}
                </mj-text>
                <mj-image align="center" padding="10px 25px" src="https://i.imgur.com/MGe6N9C.png" width="60px"></mj-image>
                <mj-text color="#2c3e50" font-family="Kantumruy, Source Sans Pro, sans-serif" font-size="24px" align="center" line-height="16px">
                    <b>$ {{price}}</b>
                </mj-text>
                <mj-text color="#2c3e50" font-family="Kantumruy, Source Sans Pro, sans-serif" font-size="16px" align="center" line-height="16px">
                    <i>{{date_of_purchase}}</i>
                </mj-text>
            </mj-column>
        </mj-section>
        <mj-section background-color="#FFFFFF" background-repeat="repeat" padding-bottom="20px" padding-top="20px">
        </mj-section>
        <mj-section background-color="#2c3e50" background-repeat="repeat" padding="0px 0px" text-align="center">
            <mj-column vertical-align="middle">
                <mj-text align="center" font-size="12px" font-weight="bold" padding="0 25px" font-family="Kantumruy, Source Sans Pro, sans-serif" color="white">
                    <p>info@tfdevs.com</p>
                </mj-text>
            </mj-column>
            <mj-column vertical-align="middle">
                <mj-social mode="horizontal" padding="30px">
                    <mj-social-element name="facebook" href="https://www.facebook.com/teachingfordevelopment"></mj-social-element>
                    <mj-social-element name="github" href="https://github.com/tfd-ed"></mj-social-element>
                    <mj-social-element name="youtube" href="https://www.youtube.com/c/TeachingForDevelopment"></mj-social-element>
                </mj-social>
            </mj-column>
        </mj-section>
        <mj-section background-color="#ecf0f1" background-repeat="repeat" background-size="auto" padding="20px 0px 0px 0px" text-align="center">
            <mj-column width="100%" padding="0">
                <mj-text color="black" font-family="Kantumruy, Source Sans Pro, sans-serif" font-size="12px" align="center" line-height="24px" align="align">
                    {{you_are_receiving_this_email}}
                </mj-text>
                <mj-text color="black" font-family="Kantumruy, Source Sans Pro, sans-serif" font-size="11px" align="center" line-height="16px">
                    &copy; {{tfd_right}}
                </mj-text>
            </mj-column>
        </mj-section>
        <mj-section padding-top="0" background-color="#ecf0f1" background-repeat="repeat">
            <mj-group>
                <mj-column width="100%" padding-right="0">
                    <mj-text font-size="11px" font-family="Kantumruy, Source Sans Pro, sans-serif" align="center" line-height="16px" font-weight="bold">
                        <a class="footer-link" href="https://tfdevs.com/privacy">{{privacy}}</a>&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;<a class="footer-link" href="https://tfdevs.com/tos">{{tos}}</a>
                    </mj-text>
                </mj-column>
            </mj-group>
        </mj-section>
    </mj-body>
</mjml>
